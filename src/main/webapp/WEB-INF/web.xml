<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">


    <servlet>
        <servlet-name>Indexer</servlet-name>
        <servlet-class>com.foodit.example.servlet.IndexingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>searcher</servlet-name>
        <servlet-class>com.foodit.example.servlet.SearchingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Indexer</servlet-name>
        <url-pattern>/indexer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>searcher</servlet-name>
        <url-pattern>/searcher</url-pattern>
    </servlet-mapping>

</web-app>